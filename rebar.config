{erl_opts, [{i, "src"},
            warnings_as_errors,
            warn_export_all,
            warn_unused_import]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used,
               deprecated_function_calls, deprecated_functions]}.

{cover_enabled, true}.

{eunit_opts, [no_tty, {report, {eunit_progress, [colored, profile]}}]}.

{clean_files, [".test/*.beam", ".eunit/*", "ebin/*.beam"]}.

{validate_app_modules, true}.

{deps,
  [
   %% public
   {cowboy,
    ".*", {git, "git://github.com/ninenines/cowboy", "dbb636034f20736e16eb9d6c809217c9525b6cbd"}},

   {jsone,
    ".*", {git, "git://github.com/sile/jsone", {tag, "1.2.1"}}},

   {jesse,
    ".*", {git, "git://github.com/for-GET/jesse", {tag, "1.2.0"}}},

   %% test
   {eunit_formatters,
    ".*", {git, "git://github.com/seancribbs/eunit_formatters", {tag, "v0.3.1"}}},

   {hackney,
    ".*", {git, "git://github.com/benoitc/hackney", {tag, "1.4.9"}}}
  ]
}.
